<p id="notice"><%= notice %></p>
<% if current_user %>

<main class='container'>
  <h2>Welcome, <%= current_user.handle %></h2><br>


  <% else %>
  <h1>Welcome</h1>
  <% end %>

  <h3>This is our collection</h3>


  <%= form_tag(products_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Products" %>
    <%= submit_tag "Search" %>
  <% end %>

  <div class='row'>
    <% @products.each do |product| %>
        <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <%= image_tag (product.image), size: "220x220"%>
          <div class="caption">
            <h3><%= product.name %></h3>
            <h4>€ <%= product.price %></h4>
            <p><%= link_to 'Show', product, class: "btn btn-default" %><%= link_to 'Add to cart', shopping_cart_items_path(product_id: product.id, quantity: 1), method: :post, class: "btn btn-default" %> </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

</main>

<footer>
  <div>
    <p>In shopping cart:</p>
    <% @cart.each do |order| %>
    <p><%= order[:quantity] %> x <%= order[:product].name %> </p>
    <p>€ <%= order[:product].price %></p>
    <% end %>
    <p> € <%= @totalprice %> </p>
  </div>

</footer>
